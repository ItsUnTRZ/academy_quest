<%= form_with(model: quest, class: "flex flex-col sm:flex-row items-end gap-2 w-full") do |form| %>
  <% if quest.errors.any? %>
    <div id="error_explanation" class="bg-red-50 text-red-500 px-3 py-2 font-medium rounded-md mb-2 w-full">
      <h2><%= pluralize(quest.errors.count, "error") %> prohibited this quest from being saved:</h2>
      <ul class="list-disc ml-6">
        <% quest.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="flex-1 w-full">
    <%= form.label :name, class: "sr-only" %>
    <%= form.text_field :name, placeholder: "Quest name", class: ["block shadow-sm rounded-md border px-3 py-2 w-full", {"border-gray-400 focus:outline-blue-600": quest.errors[:name].none?, "border-red-400 focus:outline-red-600": quest.errors[:name].any?}] %>
  </div>

  <div class="flex-shrink-0">
    <%= form.submit "Add Quest", class: "rounded-md px-3.5 py-2.5 bg-blue-600 hover:bg-blue-500 text-white font-medium cursor-pointer whitespace-nowrap" %>
  </div>
<% end %>
